{
  "manifest_version": 3,
  "name": "TCode Helper",
  "description": "Ricerca TCode sempre a portata di mano.",
  "version": "0.1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TCode Helper"
  },
  "permissions":[
    "storage"
  ],
  "host_permissions": ["https://github.com/*"]
}